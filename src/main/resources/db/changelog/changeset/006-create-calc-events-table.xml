<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="006-create-calc-events-table" author="your-name">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="calc_events"/>
            </not>
        </preConditions>

        <createTable tableName="calc_events">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_calc_events_user_id"
                             references="users(id)"/>
            </column>
            <column name="first" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="second" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="result" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="007-create-index-user-id" author="your-name">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="calc_events"/>
            <not>
                <indexExists indexName="idx_calc_events_user_id" tableName="calc_events"/>
            </not>
        </preConditions>
        <createIndex tableName="calc_events" indexName="idx_calc_events_user_id">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="008-create-index-createdate" author="your-name">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="calc_events"/>
            <not>
                <indexExists indexName="idx_calc_events_create_date" tableName="calc_events"/>
            </not>
        </preConditions>
        <createIndex tableName="calc_events" indexName="idx_calc_events_createdate">
            <column name="create_date"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>